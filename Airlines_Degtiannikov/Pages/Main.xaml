<Page x:Class="Airlines_Degtiannikov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Degtiannikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <Grid Height="70" VerticalAlignment="Top" Background="#FF0C73FF">
            <Image Source="/Images/Plane.png" Width="60" Height="36" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="1,0,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Управление авиалиниями" Foreground="White" Margin="54,20,0,0" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="Exit" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="26" Content="Выход" Margin="0,6,65,0" Background="White" Click="Exit_Click"/>
        </Grid>
        <Grid Margin="0,70,0,0" Background="#FF0C73FF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="1"
                   Content="Поиск дешевых авиабилетов" 
                   Foreground="White" 
                   Margin="0,20,0,10"
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

            <Label Grid.Row="1" Grid.Column="1"
                   Content="Лучший способ купить авиабилеты дёшево" 
                   Foreground="White" 
                   Margin="0,0,0,20"
                   FontSize="16" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

            <Label Grid.Row="2" Grid.Column="1"
                   Content="Откуда:" 
                   Foreground="White" 
                   Margin="0,0,0,5" 
                   FontSize="16" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

            <TextBox x:Name="from" Grid.Row="3" Grid.Column="1"
                     TextWrapping="Wrap" 
                     Width="333" 
                     Height="37"
                     Margin="0,0,0,10" 
                     VerticalAlignment="Top"/>

            <Label Grid.Row="4" Grid.Column="1"
                   Content="Куда:" 
                   Foreground="White" 
                   Margin="0,0,0,5"
                   FontSize="16" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

            <TextBox x:Name="to" Grid.Row="5" Grid.Column="1"
                     TextWrapping="Wrap" 
                     Width="334" 
                     Height="37"
                     Margin="0,0,0,20" 
                     VerticalAlignment="Top"/>

            <Button Grid.Row="6" Grid.Column="1"
                    Width="100" 
                    Height="35"
                    Foreground="White" 
                    Content="Найти" 
                    Background="#FF4008"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10" 
                    VerticalAlignment="Top"
                    Click="Search"/>
        </Grid>

        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="0,70,0,0"/>
    </Grid>
</Page>