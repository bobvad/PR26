        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines_Degtiannikov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"  MinHeight="450" MinWidth="800">
    <Grid>
        <Grid Height="70" VerticalAlignment="Top" Background="#FF0C73FF">
            <Image Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,10"/>
            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Управление авиалиниями" Foreground="White" Margin="54,20,0,0" FontSize="16" FontWeight="Bold"/>
            <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Content="Выйти" Margin="0,10,10,0" Background="White"/>
        </Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
